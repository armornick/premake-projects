ifndef config
  config=release
endif
export config

PROJECTS := LStatic Lua Luac Glue Srlua

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

LStatic: 
	@echo "==== Building LStatic ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f LStatic.make

Lua: LStatic
	@echo "==== Building Lua ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Lua.make

Luac: LStatic
	@echo "==== Building Luac ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Luac.make

Glue: 
	@echo "==== Building Glue ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Glue.make

Srlua: LStatic
	@echo "==== Building Srlua ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Srlua.make

clean:
	@${MAKE} --no-print-directory -C . -f LStatic.make clean
	@${MAKE} --no-print-directory -C . -f Lua.make clean
	@${MAKE} --no-print-directory -C . -f Luac.make clean
	@${MAKE} --no-print-directory -C . -f Glue.make clean
	@${MAKE} --no-print-directory -C . -f Srlua.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   release"
	@echo "   debug"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   LStatic"
	@echo "   Lua"
	@echo "   Luac"
	@echo "   Glue"
	@echo "   Srlua"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
