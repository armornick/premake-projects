ifndef config
  config=debug
endif
export config

PROJECTS := CppConsoleApp CppWindowedApp CppSharedLib CppStaticLib CsSharedLib CsConsoleApp

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

CppConsoleApp: CppSharedLib CppStaticLib
	@echo "==== Building CppConsoleApp ($(config)) ===="
	@${MAKE} --no-print-directory -C CppConsoleApp -f Makefile

CppWindowedApp: CppStaticLib
	@echo "==== Building CppWindowedApp ($(config)) ===="
	@${MAKE} --no-print-directory -C CppWindowedApp -f Makefile

CppSharedLib: 
	@echo "==== Building CppSharedLib ($(config)) ===="
	@${MAKE} --no-print-directory -C CppSharedLib -f Makefile

CppStaticLib: 
	@echo "==== Building CppStaticLib ($(config)) ===="
	@${MAKE} --no-print-directory -C CppStaticLib -f Makefile

CsSharedLib: 
	@echo "==== Building CsSharedLib ($(config)) ===="
	@${MAKE} --no-print-directory -C CsSharedLib -f Makefile

CsConsoleApp: CsSharedLib CppSharedLib
	@echo "==== Building CsConsoleApp ($(config)) ===="
	@${MAKE} --no-print-directory -C CsConsoleApp -f Makefile

clean:
	@${MAKE} --no-print-directory -C CppConsoleApp -f Makefile clean
	@${MAKE} --no-print-directory -C CppWindowedApp -f Makefile clean
	@${MAKE} --no-print-directory -C CppSharedLib -f Makefile clean
	@${MAKE} --no-print-directory -C CppStaticLib -f Makefile clean
	@${MAKE} --no-print-directory -C CsSharedLib -f Makefile clean
	@${MAKE} --no-print-directory -C CsConsoleApp -f Makefile clean

